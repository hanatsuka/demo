{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@": ["/"],
            "@src/*": ["src/*"]
        },
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["./src", "./src/global.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
